#      ******************************************************************
#      *                                                                *
#      * Description: Makefile to create the library libsumb.a.         *
#      *                                                                *
#      ******************************************************************

#      ==================================================================

#      ******************************************************************
#      *                                                                *
#      * Include the common file.                                       *
#      *                                                                *
#      ******************************************************************

SUMB_DIR = ..
SUMB_COMMON_FILE = $(SUMB_DIR)/SUmb_Common.mk
include ${SUMB_COMMON_FILE}

#      ******************************************************************
#      *                                                                *
#      * Targets for make.                                              *
#      *                                                                *
#      ******************************************************************

default: all

all: 	libsumb

clean:
	@echo "        Making clean in lib ... "
	rm -f lib/*

#      ******************************************************************
#      *                                                                *
#      * Rule to make the library.                                      *
#      *                                                                *
#      ******************************************************************

libsumb:
	@echo "        creating library ..."
	@echo
	$(AR) $(AR_FLAGS) libsumb.a $(SUMB_OBJDIR)/*.o
	@echo
	@echo "        library libsumb.a created."
	@echo
