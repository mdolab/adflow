#      ******************************************************************
#      *                                                                *
#      * Description: Makefile to create the library libsu_mpi.a.       *
#      *                                                                *
#      ******************************************************************

#      ==================================================================

#      ******************************************************************
#      *                                                                *
#      * Include the common file.                                       *
#      *                                                                *
#      ******************************************************************

SU_MPI_DIR = ..
SU_MPI_COMMON_FILE = $(SU_MPI_DIR)/SU_MPI_Common.mk
include ${SU_MPI_COMMON_FILE}

#      ******************************************************************
#      *                                                                *
#      * Targets for make.                                              *
#      *                                                                *
#      ******************************************************************

default: all

all: 	libsu_mpi

clean:
	@echo "        Making clean in SU_MPI/lib ... "
	rm -f lib/*

#      ******************************************************************
#      *                                                                *
#      * Rule to make the library.                                      *
#      *                                                                *
#      ******************************************************************

libsu_mpi:
	   @echo "        creating library ..."
	   @echo
	   $(AR) $(AR_FLAGS) libsu_mpi.a $(SU_MPI_OBJDIR)/*.o
	   @echo
	   @echo "        library libsu_mpi.a created."
	   @echo
