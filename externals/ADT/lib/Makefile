#      ******************************************************************
#      *                                                                *
#      * Description: Makefile to create the library libadt.a.          *
#      *                                                                *
#      ******************************************************************

#      ==================================================================

#      ******************************************************************
#      *                                                                *
#      * Include the common file.                                       *
#      *                                                                *
#      ******************************************************************

ADT_DIR = ..
ADT_COMMON_FILE = $(ADT_DIR)/ADT_Common.mk
include ${ADT_COMMON_FILE}

#      ******************************************************************
#      *                                                                *
#      * Targets for make.                                              *
#      *                                                                *
#      ******************************************************************

default: all

all: 	libadt

clean:
	@echo "        Making clean in ADT/lib ... "
	rm -f lib/*

#      ******************************************************************
#      *                                                                *
#      * Rule to make the library.                                      *
#      *                                                                *
#      ******************************************************************

libadt:
	   @echo "        creating library ..."
	   @echo
	   $(AR) $(AR_FLAGS) libadt.a $(ADT_OBJDIR)/*.o
	   @echo
	   @echo "        library libadt.a created."
	   @echo
